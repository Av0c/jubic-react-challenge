{
    "compilerOptions": {
        "noImplicitAny": true,                  // must declare all types
        "outDir": "./dist/",                    // path to output directory
        "sourceMap": true,                      // allow sourcemap support
        "strictNullChecks": true,               // enable strict null checks as a best practice
        "module": "es6",                        // specify module code generation
        "target": "es5",                        // specify ECMAScript target version
        "jsx": "react",                         // use typescript to transpile jsx to js
        "allowJs": true,                        // allow a partial TypeScript and JavaScript codebase
        "allowSyntheticDefaultImports": true,   // Allow defaultly-importing
        "moduleResolution": "node"              // Fix https://github.com/DefinitelyTyped/DefinitelyTyped/issues/24788 (Allow node_modules)
    },
    "include": [
        "./src/"
    ],
    "exclude": [
        "node_modules" // Exclude js modules
    ]
}
